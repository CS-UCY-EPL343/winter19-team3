<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uridecy.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <service
            android:name=".MyFirebaseMessagingService"
            android:enabled="false"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity android:name=".Request" />
        <activity android:name=".Settings" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".TermsAndConditions"
            android:parentActivityName=".TermsAndConditions">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uridecy.demo.SignUp" />
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:parentActivityName=".ForgotPassword">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uridecy.demo.LaunchScreen" />
        </activity>
        <activity android:name=".LaunchScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainState" />
    </application>

</manifest>