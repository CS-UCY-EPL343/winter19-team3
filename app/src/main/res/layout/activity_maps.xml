<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="700px"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:background="@drawable/border"
        android:padding="10dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/passenger" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10px">
                    <TextView
                        android:id="@+id/pass_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pass_name"
                        android:textSize="80px"
                        />
                    <TextView
                        android:id="@+id/pass_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pass_field_of_study"
                        android:textSize="70px"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/pass_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass_ranking"
                android:textSize="70px"
                />
            <TextView
                android:id="@+id/pass_telno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass_phone_no"
                android:textSize="70px"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2px">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="41px"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/map_marker"
                    android:layout_marginTop="2px"/>

                <TextView
                    android:id="@+id/passenger_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_location"
                    android:textSize="55px"
                    android:paddingTop="3px"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        android:background="@drawable/border"
        android:padding="10dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="96px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/driver" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_name"
                        android:textSize="80px"
                        />
                    <TextView
                        android:id="@+id/driver_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_field_of_study"
                        android:textSize="70px"
                        />
                </LinearLayout>
            </LinearLayout>

                    <TextView
                        android:id="@+id/driver_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_ranking"
                        android:textSize="70px"
                        />
                    <TextView
                        android:id="@+id/driver_telno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_phone_no"
                        android:textSize="70px"
                        />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2px">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="41px"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/map_marker"
                        android:layout_marginTop="2px"/>

                    <TextView
                        android:id="@+id/driver_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_location"
                        android:textSize="65px"
                        android:paddingTop="3px"
                        />

                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>